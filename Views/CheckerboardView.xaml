<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTracer.Views.CheckerboardView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Grid.Column="0">
            <Label Text="Color 1(RGB): " VerticalOptions="Center"/>
            <Entry Text="{Binding Color1.Red}" WidthRequest="32"
                   VerticalOptions="Center"/>
            <Entry Text="{Binding Color1.Green}" WidthRequest="32"
                   VerticalOptions="Center"/>
            <Entry Text="{Binding Color1.Blue}" WidthRequest="32"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Column="1">
            <Label Text="Color 2(RGB): " VerticalOptions="Center"/>
            <Entry Text="{Binding Color2.Red}" WidthRequest="32"
                   VerticalOptions="Center"/>
            <Entry Text="{Binding Color2.Green}" WidthRequest="32"
                   VerticalOptions="Center"/>
            <Entry Text="{Binding Color2.Blue}" WidthRequest="32"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Grid>
</ContentView>
