<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTracer.Views.SolidColorTextureView">
    <HorizontalStackLayout>
        <Label Text="Color (RGB): " VerticalOptions="Center"/>
        <Entry Text="{Binding Color.Red}" 
               VerticalOptions="Center"/>
        <Entry Text="{Binding Color.Green}" 
               VerticalOptions="Center"/>
        <Entry Text="{Binding Color.Blue}" 
               VerticalOptions="Center"/>
    </HorizontalStackLayout>
</ContentView>
